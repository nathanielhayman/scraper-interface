<%= form_for [@task, @task.task_methods.build], url: "#", method: :post, html: { multipart: true, class: "full-page" } do |f| %>
    <div class="form-entry">
        <%= f.label :action_type, "Type of Method" %><br>
        <%= f.text_field :action_type %>
    </div>
    <div class="form-entry">
        <%= f.label :action, "Action" %><br>
        <%= f.text_field :action %>
    </div>
    <div class="form-entry">
        <%= f.label :delay, "Delay (Seconds)" %><br>
        <%= f.number_field :delay %>
    </div>
    <div class="form-entry">
        <div class="submit"><%= f.submit "Submit", id: "form-submit-btn", class: "button", data: { disable_with: 'Submitting...' } %></div>
    </div>
<% end %>