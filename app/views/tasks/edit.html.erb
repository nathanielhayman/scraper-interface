<%= render "shared/error_messages", target: @task %>
<div id="t-btn-b">
    <a href="/tasks/show/<%= @task.short %>"><h1><i class="fas fa-sign-out-alt"></i></h1></a>
</div>
<div class="form-box">
    <h1>Edit Task</h1>
    <%= render "form" %>
    <div class="form-entry">
        <%= button_to "/tasks/edit/#{@task.short}", method: :delete, id: "form-delete-btn" do %>
            <i class="fas fa-trash"></i>
        <% end %>
    </div>
</div>